                        <?= $block->escapeHtml(__('Debug logging is currently ')) ?>
                        <strong>
                            <?php if ($config->isLoggingEnabled()): ?>
                                <?= $block->escapeHtml(__('enabled')) ?>
                            <?php else: ?>
                                <?= $block->escapeHtml(__('disabled')) ?>
                            <?php endif; ?>
                        </strong>
                    </p>
                </div>
                <div class="pc-log-button">
