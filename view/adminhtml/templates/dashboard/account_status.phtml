            <p class="pureclarity-info-button">
                <a class="pc-button" href="http://admin.pureclarity.com/my-account/billing"
                   target="_blank">
                    <?= $block->escapeHtml(__('Activate your subscription now')) ?>
                </a>
            </p>
        </div>
    </div>
